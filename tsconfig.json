{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-native",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "example"]
}
